<p></p>

<div class="ui container">
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Grupos</strong></a>
    <%= link_to 'Novo', new_group_path, class: 'item' %>
  </div>

  <h1>Meus grupos</h1>
  <div class="ui cards">
    <% current_user.my_groups.each do |group| %>
    <div class="card">
      <div class="content">
        <div class="header">
          <%= group.name %>
        </div>
      </div>
      <div class="extra content">
        <div class="ui tree buttons">
          <%= link_to 'Entrar', group, class: 'ui basic green button' %>
          <%= link_to 'Editar', edit_group_path(group.id), class: 'ui basic blue button' %>
          <%= link_to 'Remover', group, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'ui basic red button' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <h1>Grupos que faço parte</h1>
  <div class="ui cards">
    <% current_user.groups.each do |group| %>
    <div class="card">
      <div class="content">
        <div class="header">
          <%= group.name %>
        </div>
      </div>
      <div class="extra content">
        <div class="ui two buttons">
          <%= link_to 'Entrar', group, class: 'ui basic green button' %>
          <%= link_to 'Sair', leave_group_path(group), data: { confirm: 'Você tem certeza?' }, class: 'ui basic red button' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

